extends ../layouts/admin

block append page_title
  title 平台 log

block append head_end_tag_sl
  link(href=asset_path('css/admin/logs/log_action.css') rel='stylesheet')

block append content_sl
  section.section-container
    .container-fluid
      .row
        .col-xl-12
          h5.mt-0 平台 log
          div.cardbox
            div.cardbox-body
              ul.file_list
                each item, index in all_action_logs
                  li
                    a(href='?f=' + item class='file_link')
                      span.icon
                        i.fas.fa-circle
                      span.file_name= item
              if file_content != ''
                div.file_content
                  != (file_content.toString()).replace(/(?:\r\n|\r|\n)/g, '<br>')
          
          //-
            p.mb-4= i18n('webcloud_account.account_created_at') + time.get_time_from_timestamp(CurrentLang, auth.user.created_at)
            p.mb-4= i18n('webcloud_account.account_updated_at') + time.get_time_from_timestamp(CurrentLang, auth.user.updated_at)

  
block append body_end_others_sl
